<h1>Listing programas</h1>

<table class="lista">
  <tr>
    <th>Problema</th>
    <th>Solución</th>
    <th>Tiempo de Entrega</th>
    <th>Estado</th>
    <th></th>
    <th></th>
  </tr>

<% @programas.each do |programa| %>
  <tr>
    <td><%= programa.problema.titulo %></td>
    <td><%= link_to 'Descargar Código', serve_programa_path(programa) %></td>
    <td>
      <% date = programa.created_at.in_time_zone('Caracas') %>
      <%= I18n.localize(date, :format =>"%A, %d de %B %H:%M:%S") %>
    </td>
    <td><%= programa.estado %></td>
    <td><%= link_to image_tag("/show.png", :alt => "Mostrar"), programa %></td>
    <td><%= link_to image_tag("/delete.png", :alt => "Eliminar"), programa, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Cargar Programa', new_programa_path %>
