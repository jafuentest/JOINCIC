<h1>Lista de Premios</h1>

<table class="listaS">
  <tr>
    <th>Nombre</th>
    <th>Rifa</th>
    <th>Patrocinante</th>
    <th>Participante</th>
    <th colspan="3" width=48px>Opciones</th>
  </tr>

  <% @premios.each do |premio| %>
  <tr>
    <td><%= premio.nombre %></td>
    <td><%= premio.rifa.nombre %></td>
    <td><%= premio.patrocinante.nombre %></td>
    <td><%= premio.participante.nombreCompleto unless premio.participante.nil? %></td>
    <td><%= link_to image_tag("/show.png", :alt => "Mostrar"), premio %></td>
    <td><%= link_to image_tag("/edit.png", :alt => "Modificar"), edit_premio_path(premio) %></td>
    <td><%= link_to image_tag("/delete.png", :alt => "Eliminar"), premio, :confirm => "¿Seguro que desea eliminar el premio " + premio.nombre + " ?", :method => :delete %></td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to "Agregar Premio", new_premio_path %>