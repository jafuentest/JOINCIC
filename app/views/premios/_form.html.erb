<%= form_for(@premio) do |f| %>
  <% if @premio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@premio.errors.count, "error") %> prohibited this premio from being saved:</h2>

      <ul>
      <% @premio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, :size => 20, :maxlength => 25 %>
  </div>
  <div class="field">
    <%= f.label :patrocinante_id %><br />
    <%= f.select :patrocinante_id, @patrocinantes.collect {|p| [ p.nombre, p.id ] } %>
  </div>
  <div class="field">
    <%= f.label :rifa_id %><br />
    <%= f.select :rifa_id, @rifas.collect {|r| [ r.nombre, r.id ] } %>
  </div>
  
  <br />
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
