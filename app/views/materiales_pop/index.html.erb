<h1>Lista de materiales POP</h1>

<table class="listaS">
  <tr>
    <th>Nombre</th>
    <th>Cantidad</th>
    <th>En Existencia</th>
    <th>Por Entregar</th>
    <th>Residuo</th>
    <th colspan="3">Opciones</th>
  </tr>

  <% @materiales_pop.each do |material| %>
  <tr>
    <td><%= material.nombre %></td>
    <td><%= material.cantidad %></td>
    <td><%= material.existencia %></td>
    <td><%= material.porEntregar %></td>
    <td><%= material.disponibilidad %></td>
    <td><%= link_to image_tag("/show.png", :alt => "Mostrar"), material %></td>
    <td><%= link_to image_tag("/edit.png", :alt => "Modificar"), edit_material_pop_path(material) %></td>
    <td>
      <% if material.noHaSidoEntregado %>
        <% confirmacion = "¿Seguro que desea eliminar el material " + material.nombre + "?" %>
        <%= link_to image_tag("/delete.png", :alt => "Eliminar"), material, :confirm => confirmacion, :method => :delete %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to "Agregar nuevo material", new_material_pop_path %>
