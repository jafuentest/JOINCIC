<h1><%= @participante.nombreCompleto %></h1>
<p id="notice"><%= notice %></p>

<div align="center">
  <%= form_tag participantes_mates_path do %>
    <div class="field">
      <%= hidden_field_tag :entrada, @participante.entrada %>
    </div>
    
    <div style="width:100px" >    
      <% @materiales_pop.each do |material| %>
        <% if material.disponible %>
        <div class="field" align="left">
          <%= check_box_tag material.nombre, 1, true %>
          <%= label_tag     material.nombre %>
        </div>
        <br/>
        <% end %>
      <% end %>
    </div>
    
    <br />
    
    <div class="actions">
      <%= submit_tag 'Enviar' %>
    </div>
    
  <% end %>
  
  <br />
  
  <%= link_to 'Cancelar', new_participante_mate_path %>
</div>
