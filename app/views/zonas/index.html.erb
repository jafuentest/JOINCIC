<h1>Lista de zonas</h1>

<table class="listaS">
  <tr>
    <th>Nombre</th>
    <th>Capacidad</th>
	<th>Disponibilidad</th>
    <th colspan="3">Opciones</th>
  </tr>

<% @zonas.each do |zona| %>
  <tr>
    <td><%= zona.nombre %></td>
    <td><%= zona.capacidad %></td>
	<td><%= zona.capacidad - zona.participantes.count %></td>
    <td><%= link_to image_tag("/show.png", :alt => "Mostrar"), zona %></td>
	<td><%= link_to image_tag("/edit.png", :alt => "Modificar"), edit_zona_path(zona) %></td>
	<td><%= link_to image_tag("/delete.png", :alt => "Eliminar"), zona, confirm: "¿Seguro que desea eliminar la zona " + zona.nombre + "?", method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Agregar Zona', new_zona_path %>
