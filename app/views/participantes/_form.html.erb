<%= form_for(@participante) do |f| %>
  <% if @participante.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@participante.errors.count, "error prohibió", "errores prohibieron") %> guardar el organizador:</h2>

      <ul>
      <% @participante.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="formulario">
    <tr>
      <th width=55%></th>
      <th width=45%></th>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.label      :cedula %>
          <%= f.text_field :cedula, :size => 20, :maxlength => 8 %>
        </div>
        <div class="field">
          <%= f.label      :nombre %>
          <%= f.text_field :nombre,     :size => 10, :maxlength => 15 %>
          <%= f.text_field :seg_nombre, :size => 10, :maxlength => 15 %>
        </div>
        <div class="field">
          <%= f.label      :apellido %>
          <%= f.text_field :apellido,     :size => 10, :maxlength => 15 %>
          <%= f.text_field :seg_apellido, :size => 10, :maxlength => 15 %>
        </div>
        <div class="field">
          <%= f.label       :fecha_nac %>
          <%= f.date_select :fecha_nac, :start_year =>  Time.now.year - 70, :end_year =>  Time.now.year - 10, :order => [:day, :month, :year], :use_short_month => true %>
        </div>
        <div class="field">
          <%= f.label      :direccion %>
          <%= f.text_field :direccion, :size => 20, :maxlength => 50 %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label      :telefono %>
          <%= f.text_field :telefono, :size => 20, :maxlength => 11 %>
        </div>
        <div class="field">
          <%= f.label      :correo %>
          <%= f.text_field :correo, :size => 20, :maxlength => 25 %>
        </div>
        <div class="field">
          <%= f.label      :institucion %>
          <%= f.text_field :institucion, :size => 20, :maxlength => 15 %>
        </div>
        <div class="field">
          <%= f.label        :nivel %>
          <%= f.number_field :nivel, :in => 1..10, :value => 1 %>
        </div>
        <div class="field">
          <%= f.label  :zona_id %>
          <%= f.select :zona_id, @zonas.collect {|z| [ z.nombre, z.id ] } %>
        </div>
      </td>
    </tr>
  </table>
  
  <br />
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>