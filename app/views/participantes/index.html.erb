<h1>Lista de participantes (<%= @participantes.size %>)</h1>
<p id="notice"><%= notice %></p>

<table class="lista">
  <tr>
    <th>Nombre(s)</th>
    <th>Apellido(s)</th>
    <th>Institución</th>
    <th>Nivel</th>
    <th>Zona</th>
    <th>Fecha de Compra</th>
    <th colspan=3>Opciones</th>
  </tr>

  <% @participantes.each do |participante| %>
  <tr>
    <td><%= participante.nombres %></td>
    <td><%= participante.apellidos %></td>
    <td align=center><%= participante.institucion %></td>
    <td align=center><%= participante.nivel %></td>
    <td align=center><%= participante.zona.nombre %></td>
    <td align=center><%= I18n.l participante.created_at.in_time_zone("Caracas").to_date, :format => :medio %></td>
    <td><%= link_to image_tag("/show.png", :alt => "Mostrar"), participante %></td>
    <td><%= link_to image_tag("/edit.png", :alt => "Modificar"), edit_participante_path(participante) %></td>
    <td><%= link_to image_tag("/delete.png", :alt => "Eliminar"), participante, confirm: "¿Seguro que desea eliminar a " + participante.nombreCompleto + "?", method: :delete %></td>
  </tr>
  <% end %>
</table>

<br />

<div align=center>
  <%= form_tag "participantes/buscar" do %>
    <%= text_field_tag :cedula, nil, { :placeholder => "Cédula" } %>
    <br />
    <%= submit_tag "Buscar Participante"%>
  <% end %>
</div>

<p>
  <%= link_to "Agregar Participante", new_participante_path %>
</p>