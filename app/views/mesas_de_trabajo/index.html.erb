<h1>Lista de Mesas de Trabajo</h1>

<table class="lista">
  <tr>
    <th>Titulo</th>
    <th>Dia y Hora</th>
    <th>Lugar</th>
    <th>Capacidad</th>
    <th>Ponente</th>
    <th>Patrocinante</th>
    <th colspan="3" width=48px>Opciones</th>
  </tr>

  <% @mesas_de_trabajo.each do |mt| %>
    <tr>
      <td><%= mt.titulo %></td>
      <td><%= I18n.l mt.dia, :format => :dia %> <%= I18n.l mt.hora_ini, :format => :hora %></td>
      <td><%= mt.lugar %></td>
      <td align=center><%= mt.capacidad %></td>
      <td align=center><%= mt.ponente.nombreCompleto %></td>
      <td align=center><%= mt.patrocinante.nombre if !mt.patrocinante.nil? %></td>
      <td><%= link_to image_tag("/show.png", :alt => "Mostrar"), mt %></td>
      <td><%= link_to image_tag("/edit.png", :alt => "Modificar"), edit_mesa_de_trabajo_path(mt) %></td>
      <td><%= link_to image_tag("/delete.png", :alt => "Eliminar"), mt, confirm: "Are you sure?", method: :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to "Agregar Mesa de Trabajo", new_mesa_de_trabajo_path %>