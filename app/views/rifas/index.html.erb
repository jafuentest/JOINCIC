<h1>Lista de Rifas</h1>

<table class="listaS">
  <tr>
    <th>Nombre</th>
    <th colspan="3">Opciones</th>
  </tr>

  <% @rifas.each do |rifa| %>
  <tr>
    <td><%= rifa.nombre %></td>
    <td><%= link_to image_tag("/show.png", :alt => "Mostrar"), rifa %></td>
    <td><%= link_to image_tag("/edit.png", :alt => "Modificar"), edit_rifa_path(rifa) %></td>
    <td><%= link_to image_tag("/delete.png", :alt => "Eliminar"), rifa, confirm: "¿Seguro que desea eliminar la rifa " + rifa.nombre + "?", method: :delete %></td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to "Agregar Rifa", new_rifa_path %>