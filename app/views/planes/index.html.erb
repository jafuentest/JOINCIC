<h1>Listia de Planes</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Precio</th>
    <th>Beneficios</th>
    <th colspan="3">Opciones</th>
  </tr>

  <% @planes.each do |plan| %>
  <tr>
    <td><%= plan.nombre %></td>
    <td><%= plan.precio %></td>
    <td><%= plan.beneficios %></td>
    <td><%= link_to image_tag("/show.png", :alt => "Mostrar"), plan %></td>
    <td><%= link_to image_tag("/edit.png", :alt => "Modificar"), edit_plan_path(plan) %></td>
    <td><%= link_to image_tag("/delete.png", :alt => "Eliminar"), plan, confirm: "¿Seguro que desea eliminar el plan " + plan.nombre + "?", method: :delete %></td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to "Agregar Plan", new_plan_path %>